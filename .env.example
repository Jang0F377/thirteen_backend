# -------------------------
# Thirteen Backend
# Example environment file
# Copy to `.env` and replace <placeholders> with real values.
# -------------------------

# Runtime environment (development | production)
ENV=development

# Host port that Docker exposes the FastAPI app on
APP_PORT=<8000>

# JWT signing key (any sufficiently random string)
JWT_SECRET_KEY=<your_jwt_secret_key>

# -------------------------
# PostgreSQL
# -------------------------
BACKEND_DB_HOST=<change_me>
BACKEND_DB_PORT=5432
BACKEND_DB_NAME=<change_me>
BACKEND_DB_USER=<change_me>
BACKEND_DB_PASSWORD=<change_me>
BACKEND_DB_DIALECT=postgresql
BACKEND_DB_DRIVER=asyncpg

# -------------------------
# Redis / Cache
# -------------------------
# Full redis URL; must include password if `CACHE_PASSWORD` is set
CACHE_URL=redis://:<password>@<host>:6379/0
CACHE_PASSWORD=<cache_password>
